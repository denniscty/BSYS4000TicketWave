@page "{id:int?}"
@model TicketWave.Pages.Events.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Are you sure you want to delete this event?</h4>

<hr />

@if (!string.IsNullOrEmpty(Model.EventTickets.ImageFileName))
{
    <img src="~/images/events/@Model.EventTickets.ImageFileName"
         alt="Event image"
         class="img-fluid mb-3"
         style="max-height: 300px; object-fit: contain;" />
}

<div class="mb-3">
    <strong>Event Name:</strong> @Model.EventTickets.EventName <br />
    <strong>Date:</strong> @Model.EventTickets.EventDateTime.ToShortDateString() <br />
    <strong>Location:</strong> @Model.EventTickets.EventLocation <br />
    <strong>Ticket Price:</strong> $@Model.EventTickets.EventTicketPrice <br />
    <strong>Tickets Available:</strong> @Model.EventTickets.EventNumOfTicket <br />
    <strong>Description:</strong> @Model.EventTickets.EventDescription <br />
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
</form>
