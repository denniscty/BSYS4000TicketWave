@page
@model TicketWave.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Event Listing</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="EventTickets.ListingType" class="control-label"></label>
        <select asp-for="EventTickets.ListingType" class="form-control">
            <option value="Sell">Sell</option>
            <option value="Buy">Buy</option>
        </select>
        <span asp-validation-for="EventTickets.ListingType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventDateTime" class="control-label"></label>
        <input asp-for="EventTickets.EventDateTime" class="form-control" />
        <span asp-validation-for="EventTickets.EventDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventName" class="control-label"></label>
        <input asp-for="EventTickets.EventName" class="form-control" />
        <span asp-validation-for="EventTickets.EventName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventLocation" class="control-label"></label>
        <input asp-for="EventTickets.EventLocation" class="form-control" />
        <span asp-validation-for="EventTickets.EventLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventTicketPrice" class="control-label"></label>
        <input asp-for="EventTickets.EventTicketPrice" class="form-control" />
        <span asp-validation-for="EventTickets.EventTicketPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventNumOfTicket" class="control-label"></label>
        <input asp-for="EventTickets.EventNumOfTicket" class="form-control" />
        <span asp-validation-for="EventTickets.EventNumOfTicket" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventDescription" class="control-label"></label>
        <textarea asp-for="EventTickets.EventDescription" class="form-control"></textarea>
        <span asp-validation-for="EventTickets.EventDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventUserContactEmail" class="control-label"></label>
        <input asp-for="EventTickets.EventUserContactEmail" class="form-control" />
        <span asp-validation-for="EventTickets.EventUserContactEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Upload Image</label>
        <input type="file" asp-for="UploadImage" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div class="mt-3">
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
