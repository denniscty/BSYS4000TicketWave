@page
@model TicketWave.Pages.Events.EditModel
@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="EventTickets.EventId" />

    <div class="form-group">
        <label asp-for="EventTickets.EventName"></label>
        <input asp-for="EventTickets.EventName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventDateTime"></label>
        <input asp-for="EventTickets.EventDateTime" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventLocation"></label>
        <input asp-for="EventTickets.EventLocation" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventTicketPrice"></label>
        <input asp-for="EventTickets.EventTicketPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventNumOfTicket"></label>
        <input asp-for="EventTickets.EventNumOfTicket" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventUserContactEmail"></label>
        <input asp-for="EventTickets.EventUserContactEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.EventDescription"></label>
        <textarea asp-for="EventTickets.EventDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="EventTickets.ListingType"></label>
        <select asp-for="EventTickets.ListingType" class="form-control">
            <option value="Sell">Sell</option>
            <option value="Buy">Buy</option>
        </select>
    </div>

    <!-- Image Preview -->
    @if (!string.IsNullOrEmpty(Model.EventTickets.ImageFileName))
    {
        <div class="mb-3">
            <label class="form-label">Current Image</label><br />
            <img src="~/images/events/@Model.EventTickets.ImageFileName"
                alt="Event image"
                class="img-fluid"
                style="max-height: 300px; object-fit: contain;" />
        </div>
    }
    else
    {
        <div class="mb-3 text-muted">No image uploaded yet.</div>
    }

    <!-- Image Upload -->
    <div class="form-group">
        <label for="UploadImage">Upload New Image</label>
        <input type="file" asp-for="UploadImage" class="form-control" />
        <span asp-validation-for="UploadImage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-page="./Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
