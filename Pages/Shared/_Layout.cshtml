<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketWave</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-light mb-4 px-4">
        <a class="navbar-brand" asp-page="/Index">🎟️ TicketWave</a>

        <div class="ml-auto d-flex align-items-center gap-3">
            <a class="nav-link" asp-page="/Events/Index">Main Page</a>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <span class="navbar-text">Hello, @User.Identity.Name!</span>
                <a class="btn btn-outline-primary" asp-page="/Events/Create">List Event</a>
                <a class="nav-link" asp-page="/Events/MyEvents">My Events</a>
                <a class="nav-link" asp-page="/Offers/MyOffers">My Offers</a>
                <a class="nav-link @(ViewContext.ActionDescriptor.DisplayName!.Contains("OffersInbox") ? "active" : "")"
   asp-page="/Offers/OffersInbox">Offers Inbox</a>
                <form method="post" asp-page="/Account/Logout" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            }
            else
            {
                <a class="btn btn-outline-primary" asp-page="/Account/Login">Login</a>
                <a class="btn btn-outline-secondary" asp-page="/Account/Register">Register</a>
            }
        </div>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="footer bg-light text-center mt-5 p-3">
        <p class="mb-0">&copy; @DateTime.Now.Year - TicketWave</p>
    </footer>

    @RenderSection("Scripts", required: false)

    <!-- Bootstrap 5 JS (optional, for dropdowns, modals, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
